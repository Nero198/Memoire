@page "/Update/{Id:int}"
<h3>Get</h3>
@if (person is not null)
{
    <EditForm Model="person" OnSubmit="() => UpdatePerson()" FormName="Person">
        <div>
            LastName:
            <InputText @bind-Value="person.Lastname"/>
        </div>
        <div>
            FirstName:
            <InputText @bind-Value="person.Firstname"/>
        </div>
        <div>
            Date of birth:
            <InputDate @bind-Value="person.DateOfBirth"/>
        </div>
        <div>
            <input type="radio" checked="@(!person.IsMan)"
                   name="Gender" @onchange="@(() => person.IsMan = false)"/>
            <label>Female</label>

            <input type="radio" checked="@person.IsMan"
                   name="Gender" @onchange="@(() => person.IsMan = true)"/>
            <label>Male</label>

        </div>
        <input type="submit" value="Update"/>
    </EditForm>
}

