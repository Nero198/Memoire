@page
@model CreateModel

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create Person</title>
</head>
<body>
    <h1>Create Person</h1>
    <div class="container">
        <main role="main" class="pb-3">
            @if (TempData["isSucess"] != null && (bool)TempData["isSucess"] == true)
            {
                <div class="alert alert-success" role="alert">
                    @Html.Raw(@TempData["response"])
                </div>
            }
            else if(TempData["isSucess"] != null && (bool)TempData["isSucess"] == false)
            {
                <div class="alert alert-danger" role="alert">
                    @Html.Raw(@TempData["response"])
                </div>
            }
        </main>
    </div>
    <form method="post">
        <div>
            <label asp-for="Person.Lastname"></label>
            <input asp-for="Person.Lastname" />
            <span asp-validation-for="Person.Lastname"></span>
        </div>
        <div>
            <label asp-for="Person.Firstname"></label>
            <input asp-for="Person.Firstname" />
            <span asp-validation-for="Person.Firstname"></span>
        </div>
        <div>
            <label asp-for="Person.DateOfBirth"></label>
            <input asp-for="Person.DateOfBirth" type="date" />
            <span asp-validation-for="Person.DateOfBirth"></span>
        </div>
        <div>
            <label asp-for="Person.IsMan">Gender</label>
            <div>
                <input type="radio" asp-for="Person.IsMan" value="true" /> Male
                <input type="radio" asp-for="Person.IsMan" value="false" /> Female
            </div>
            <span asp-validation-for="Person.IsMan"></span>
        </div>
        <button type="submit">Create</button>
    </form>

    <div>
        <a asp-page="/Index">Back to List</a>
    </div>

    <partial name="_ValidationScriptsPartial" />
</body>
</html>
